        </ContentWithTargetPath>
        <ContentWithTargetPath Include="..\Akytos\vendor\ImGui.NET\cimguizmo\win-x86\cimguizmo.dll" Condition="'$(IsWindows)'=='true' And '$(Platform)'=='x86'">
