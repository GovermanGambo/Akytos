    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\Shaders\Sprites_Default.glsl" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Graphics\Buffers" />
    </ItemGroup>
