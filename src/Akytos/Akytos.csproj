        </ContentWithTargetPath>
        <!--<ContentWithTargetPath Include="..\Akytos\vendor\ImGui.NET\cimplot\osx-x64\cimplot.dylib" Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))'">
