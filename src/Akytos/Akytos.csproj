        <ContentWithTargetPath Include="..\Akytos\vendor\ImGui.NET\cimnodes\linux-x64\cimnodes.so" Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' ">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <TargetPath>cimnodes.so</TargetPath>
        </ContentWithTargetPath>
        <!--<ContentWithTargetPath Include="..\Akytos\vendor\ImGui.NET\cimnodes\osx-x64\cimnodes.dylib"  Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))'">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
